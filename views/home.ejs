<html>
    <head>
        <title>
            To-Do List
        </title>
    </head>
    <body>
        <h1>To-Do List</h1>
        <div>
            <ul>
                <% for( i of task_list){%>
                <li>
                    <p><%=i.task%></p>
                    <p><%=i.date%></p>
                    <p><%=i.type%></p>
               </li>
               <%}%> 
            </ul>
        </div>
        <form action="/create-task" method="POST">
            <input type="text" name="task" placeholder="Add Task">
            <input type="date" name="date" placeholder="Due Date">
            <input type="text" name="type" placeholder="eg.personal, work,etc.">
            <button type="submit">Add Task</button>
        </form>
    </body>
</html>